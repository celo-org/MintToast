{
  "compilerOptions": {
    "target": "es2017",
    "skipLibCheck": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["*"]
    }
  },
  "compileOnSave": true,
  "include": ["**/*.ts", "**/*.tsx"]
}
